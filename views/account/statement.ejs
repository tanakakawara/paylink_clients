<%- include('../_page_headers/admin_top.ejs') %>
<div class="row">
  <div class="col-lg-12">
    <div class="card">
      <div class="card-header">
        <div class="row fs-3">
          <div class="col-lg-6">
            <label class="text-gray-500"></label>
            Full Name:
            <span id="full_name" class="text-dark"> </span>
          </label>
          </div>
          
          <div class="col-lg-6">
            <label class="text-gray-500"></label>
            Account No:
            <span id="account_no" class="text-dark"> </span>
          </label>
          </div>
        
          <div class="col-lg-4">
            <label class="text-gray-500"></label>
              Date:
              <span id="date" class="text-dark"> </span>
            </label>
          </div>
        </div>
      </div>
      <div class="card-body">
        <table
          id="tblmembers"
          class="table table-striped table-row-bordered gy-5 gs-7 border rounded"
        >
          <thead>
            <tr class="fw-bolder fs-12 text-gray-800 px-7">
              <th>date</th>
              <th>description</th>
            
              <th>debit</th>
              <th>credit</th>
              <th>balance</th>
            </tr>
          </thead>
          <tbody>
            <script>
              const state = [
                {
                  date: "22-01-12",
                  description: "withdrawal",
            
                  debit: "dr",
                  credit: "cr",
                  balance: 98,
                },
              ];
              state.forEach((element) => {
                document.write(`
              <tr>
                <td>${element.date}</td>
                <td>${element.description}</td>
           
               
                <td>${element.debit}</td>
                <td>${element.credit}</td>
                <td>${element.balance}</td>
                
              </tr>
              `);
              });
            </script>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>

