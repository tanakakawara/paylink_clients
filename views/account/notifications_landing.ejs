<%- include('../_page_headers/admin_top.ejs') %>
<div class="row">
  <div class="card">
    <div class="card-header">
      <h1 class="card-title">Notifications</h1>
      <div class="card-toolbar"></div>
    </div>

    <div class="card-body">
      <table
        id="tblmembers"
        class="table table-striped table-row-bordered gy-5 gs-7 border rounded"
      >
        <thead>
          <tr class="fw-bolder fs-6 text-gray-800 px-7">
            <th></th>
            <th>Title</th>
            <th>Message</th>
            <th>Date</th>
          </tr>
        </thead>
        <tbody>
          <script>
                   const notifications = <%- locals.notifications  %>


              notifications.forEach((element) => {
                if (element.status == 0) {
                  not_stats = '<i class="fa fa-circle text-warning" >';
                } else {
                  not_stats = '<i class="fa fa-circle text-grey-600"> ';
                }

                document.write(`


                    <tr>

                      <td><a href="/account/notifications_page/${element.id}" class="bg-hover-light-warning">${not_stats}</a></i></td>
                      <td><a href="/account/notifications_page/${element.id}" class="bg-hover-light-warning">${element.title}</a></td>
                      <td><a href="/account/notifications_page/${element.id}" class="bg-hover-light-warning">${element.message}</a></td>
                      <td><a href="/account/notifications_page/${element.id}" class="bg-hover-light-warning">${element.date}</td>


                    </tr>
            </a>


                    `);
              });
          </script>
        </tbody>
      </table>
    </div>
  </div>
</div>
<%- include('../_page_headers/admin_bottom.ejs') %>
<script></script>
<script>
  $(document).ready(function () {
    document.title = "Portal -  Paylink Clients";
    document.getElementById("breadcrumb_title").innerHTML = "Notifications";
    document.getElementById("breadcrumb_thread").innerHTML =
      "Home - Notifications";
  });
</script>
